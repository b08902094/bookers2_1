<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %> <%= csp_meta_tag %>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <script
      src="https://kit.fontawesome.com/946d35510f.js"
      crossorigin="anonymous"
    ></script>
    <%= stylesheet_pack_tag 'application', media: 'all',
    'data-turbolinks-track': 'reload' %> <%= javascript_pack_tag 'application',
    'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <main class="mb-auto">
      <div class="container">
        <div class="row">
<div class="col-md-3">
      <h2>User info</h2>
      <img src="">
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @book.user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @book.user.introduction %></th>
  </tr>
</tbody></table>

<div class="row">
  <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(@book.user.id) %>"><i class="fas fa-user-cog"></i></a></div>
      <h2 class="mt-3">New book</h2>
      <form action="/books" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="JJ3vd_JAMcXyQhgDtMFuMVAl7FBAfW7mg1xM0w3XOaQ3eoR7Nz4XdfQocPLbWPNxYLr0-Z58XKGMYOAx8oiFzw" autocomplete="off">
  <div class="form-group">
    <label for="book_title">Title</label>
    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  </div>
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
</form>
    </div>
    <div class="col-md-8 offset-md-1">
<table class="table table-hover table-inverse">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody><tr>
          <td><a href="<%= user_path(@book.user_id) %>"><%= image_tag @book.user.get_profile_image(100, 100) %><br><%= @book.user.name %></a></td>
          <td><a href="<% book_path(@book) %>"><%= @book.title %></a></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><a class="btn btn-sm btn-success edit_book" href="<%= edit_book_path(@book) %>">Edit</a></td>
            <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book" rel="nofollow" data-method="delete" href="<%= book_path(@book) %>">Destroy</a></td>
          <% end %>
        </tr>
      </tbody></table>
    </div>
<div>
</table>
      <%= yield %>
    </main>
  </body>
</html>