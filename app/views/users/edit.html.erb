<h2>User info</h2>
 <% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
  <% end %>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <label for="inputImage">Profile Image</label>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  <label for="inputIntro">Introduction</label>
  <%= f.text_area :introduction, id:"inputIntro"%>
  <%= f.submit "Update User" %>
<% end %>